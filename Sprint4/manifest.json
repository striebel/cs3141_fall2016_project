{
    "manifest_version": 2,

    "name": "Stop Procrastination",
    "version": "0.9",

    "description": "Don't succumb to distraction",
  
    "browser_action":
    {
        "default_icon": "./view/assets/icon64.png",
        "default_popup": "./view/main_menu/main_menu.html"
    },
  
	"background": { "scripts": ["./controller/background.js"] },

    "content_scripts":
    [{
        "matches":
        [
            "http://*/*",
            "https://*/*"
        ],
        "js":
		[
			"./model/model.js",
			"./controller/content.js"
		],
        "run_at": "document_end"
    }],
  
    "options_page": "./view/options/options.html",
  
    "permissions":
    [
        "tabs", 
        "<all_urls>",
        "storage"
    ],
  
    "icons":
    {
        "128": "./view/assets/icon128.png",
        "16": "./view/assets/icon16.png",
        "48": "./view/assets/icon48.png"
    }
}
